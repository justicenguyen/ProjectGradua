@model ElectricShop.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var dsLoaiSanPham = (List<ElectricShop.Models.LoaiSanPham>)ViewBag.DSLoaiSanPham;
    var dsNhaSanXuat = (List<ElectricShop.Models.NhaSanXuat>)ViewBag.DSNhaSanXuat;
}
@section ckeditor{
    <script src="~/frontend_admin/ckeditor/ckeditor.js" type="text/javascript"></script>
    <script src="~/frontend_admin/js/loadimage_edit.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/frontend_admin/bootstrap/dist/js/bootstrap-filestyle.min.js"> </script>
    <script>
        CKEDITOR.replace('editor1');
    </script>
}

<h2>Chỉnh sửa sản phẩm</h2>

<form class="form-horizontal" asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div style="margin-left:70px;"><img src="/@Model.HinhAnh"  id="img" class="img-rounded" alt="Chọn hình đại diện sản phẩm" width="400" height="320"></div><br />
            <div class="form-group">
                <label asp-for="HinhAnh" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input type="file" id="files" name="Hinh_Anh" onchange="showMyImage(this)">
                    <input type="hidden" asp-for="HinhAnh" id="checkchange" value="@Model.HinhAnh" />
                    <span asp-validation-for="HinhAnh" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TenSPCoDau" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="TenSPCoDau">
                    <span asp-validation-for="TenSPCoDau" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TenSPKhongDau" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="TenSPKhongDau">
                    <span asp-validation-for="TenSPKhongDau" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="GiaGoc" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="GiaGoc">
                    <span asp-validation-for="GiaGoc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="GiaGiam" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="GiaGiam">
                    <span asp-validation-for="GiaGiam" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="LoaiSanPham"></label>
                <div class="col-sm-7">

                    <select class="form-control" asp-for="LoaiSanPham">
                        @foreach (var lsp in dsLoaiSanPham)
                        {
                            <option value="@lsp.ID" @{(Model.LoaiDanMay.Equals(lsp.ID)?"checked='checked'":"")} >@lsp.TenLoaiSPCoDau</option>

                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="NhaSanXuat"></label>
                <div class="col-sm-7">
                    <select class="form-control" asp-for="NhaSanXuat">
                        @foreach (var nsx in dsNhaSanXuat)
                        {
                            <option value="@nsx.ID" @{(Model.LoaiDanMay.Equals(nsx.ID)?"checked='checked'":"")}>@nsx.TenNSXCoDau</option>

                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MauSac" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="MauSac">
                    <span asp-validation-for="MauSac" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="XuatXu" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="MauSac">
                    <span asp-validation-for="XuatXu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BaoHanh" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="BaoHanh" value="0">
                    <span asp-validation-for="BaoHanh" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="HienThi" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input style="width:20px;height:20px;" asp-for="HienThi" class="form-control">
                    <span asp-validation-for="HienThi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SanPhamBanChay" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input asp-for="SanPhamBanChay" style="width:20px;height:20px;" class="flat">
                    <span asp-validation-for="SanPhamBanChay" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="SoLuong" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="SoLuong" value="0">
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KichThuocThung" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="KichThuocThung">
                    <span asp-validation-for="KichThuocThung" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KhoiLuongThung" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="KhoiLuongThung">
                    <span asp-validation-for="KhoiLuongThung" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KichThuocMH" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="KichThuocMH">
                    <span asp-validation-for="KichThuocMH" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DoPhanGiai" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="DoPhanGiai">
                    <span asp-validation-for="DoPhanGiai" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ManHinhCong" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="ManHinhCong">
                    <span asp-validation-for="ManHinhCong" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BoXuLy" class="col-md-4 control-label"></label>
                <div class="col-sm-7">
                    <input class="form-control" asp-for="BoXuLy">
