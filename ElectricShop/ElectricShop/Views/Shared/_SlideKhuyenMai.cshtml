@model ElectricShop.Models.DuLieuTrangChu
<div id="carouselBlk">
    <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
            @{ int flag = 0;}
            @foreach (var km in Model.dskhuyenmai)
            {
                if (flag == 0)
                {
                <div class="item active">
                    <div class="container">
                        <a asp-controller="KhuyenMai" asp-action="CTKhuyenMai" asp-route-id="@km.ID"><img style="width:100%" src="~/@km.HinhAnh" alt="special offers" /></a>
                        <div class="carousel-caption">
                            <h4>Second Thumbnail label</h4>
                            <p>Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.</p>
                        </div>
                    </div>
                </div>
                    flag = 1;
                }
                else
                {
                <div class="item">
                    <div class="container">
                        <a asp-controller="KhuyenMai" asp-action="CTKhuyenMai" asp-route-id="@km.ID"><img style="width:100%" src="~/@km.HinhAnh" alt="" /></a>
                        <div class="carousel-caption">
                            <h4>Second Thumbnail label</h4>
                            <p>Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.</p>
                        </div>
                    </div>
                </div>
                }
            }
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
</div>