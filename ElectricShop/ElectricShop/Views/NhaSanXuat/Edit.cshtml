@model ElectricShop.Models.NhaSanXuat

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa</h1>
<div class="row">
    <div class="col-sm-6">
        <form class="form-horizontal" asp-action="Create">
            <div class="form-group">
                <label asp-for="TenNSXCoDau" class="control-label col-sm-4"></label>
                <div class="col-sm-7">
                    <input type="text" asp-for="TenNSXCoDau" class="form-control" placeholder="Nhập tên sản phẩm có dấu">
                    <span asp-validation-for="TenNSXCoDau" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TenNSXKhongDau" class="control-label col-sm-4"></label>
                <div class="col-sm-7">
                    <input type="text" asp-for="TenNSXKhongDau" class="form-control" placeholder="Nhập tên sản phẩm không dấu">
                    <span asp-validation-for="TenNSXKhongDau" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-7">
                    <input type="submit" value="Xác nhận" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</div>
